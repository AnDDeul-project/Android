<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_select_leader_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/checkli_img_check_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_select_leader_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="사용자 이름"
        android:textColor="@color/text_high"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_select_leader_btn"
        app:layout_constraintStart_toEndOf="@+id/item_select_leader_btn"
        app:layout_constraintTop_toTopOf="@+id/item_select_leader_btn" />

    <View
        android:id="@+id/item_select_leader_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>