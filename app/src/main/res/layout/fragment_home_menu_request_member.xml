<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_menu_request_member_profile_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/default_profile"
        app:shapeAppearanceOverlay="@style/ProfileCircle"
        />

    <TextView
        android:id="@+id/home_menu_request_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="18sp"
        android:textColor="@color/text_high"
        android:fontFamily="@font/font_pretendard_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_menu_request_member_profile_iv"
        android:layout_marginStart="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_menu_request_accept_bt"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:fontFamily="@font/font_pretendard_bold"
        android:text="수락하기"
        android:textSize="14sp"
        android:textColor="@color/onPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/RoundButton" />




</androidx.constraintlayout.widget.ConstraintLayout>