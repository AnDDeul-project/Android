<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_menu_member_profile_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ProfileCircle" />

    <TextView
        android:id="@+id/home_menu_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/font_pretendard_bold"
        android:text="사용자 이름"
        android:textColor="@color/text_high"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_menu_member_profile_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_menu_member_leader_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_leader"
        app:layout_constraintBottom_toBottomOf="@+id/home_menu_member_name_tv"
        app:layout_constraintStart_toEndOf="@+id/home_menu_member_name_tv"
        app:layout_constraintTop_toTopOf="@+id/home_menu_member_name_tv" />

    <ImageButton
        android:id="@+id/home_menu_member_check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:src="@drawable/ic_home_menu_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>