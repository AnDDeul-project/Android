<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_menu_member_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_upload_feed"
        app:shapeAppearanceOverlay="@style/ProfileCircle"
        />

    <TextView
        android:id="@+id/home_menu_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="20sp"
        android:textColor="@color/text_high"
        android:fontFamily="@font/font_pretendard_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_menu_member_profile_iv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>
    
    <ImageButton
        android:id="@+id/home_menu_member_check_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_home_menu_check"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>